@model TakeAction.Models.Assignment.AssignmentEdit

@{
    ViewBag.Title = "Edit";
}

<h2 style="color:white;font-size: 70px"><center>Edit Assignment</center></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    {<body>
         <div class=" createemployee-board">
             @Html.HiddenFor(model => model.AssignmentId)

             <div class=" createemployee-container col-md-12" style="text-align:center; margin:10px">
                 <div class="createemployee-card" ; color: black>
                     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Employee
                             @Html.DropDownListFor(model => model.EmployeeId, ViewData["Employees"] as IEnumerable<SelectListItem>)
                             @Html.ValidationMessageFor(model => model.EmployeeFullName, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Task Name
                             @Html.DropDownListFor(model => model.TaskId, ViewData["Tasks"] as IEnumerable<SelectListItem>)
                             @Html.ValidationMessageFor(model => model.TaskName, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Assigner First Name
                             @Html.EditorFor(model => model.AssignerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                             @Html.ValidationMessageFor(model => model.AssignerFirstName, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Assigned Last Name
                             @Html.EditorFor(model => model.AssignerLastName, new { htmlAttributes = new { @class = "form-control" } })
                             @Html.ValidationMessageFor(model => model.AssignerLastName, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Dept
                             @Html.EnumDropDownListFor(model => model.DeptA, new { htmlAttributes = new { @class = "form-control" } })
                             @Html.ValidationMessageFor(model => model.DeptA, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             Assigned Date
                             @Html.EditorFor(model => model.AssignedDate, new { htmlAttributes = new { @class = "datepicker", autocomplete = "off" } })
                             @Html.ValidationMessageFor(model => model.AssignedDate, "", new { @class = "text-danger" })
                         </div>
                     </div>
                     <div class="form-group">
                         <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                             <input type="submit" value="Save" class="btn btn-default" />
                         </div>
                     </div>
                 </div>
             </div>
             <div>
                 @Html.ActionLink("Back to List", "Index")
             </div>

             @section Scripts {
                 @Scripts.Render("~/bundles/jqueryval")
                 <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

                 <script style="color: black">
                     $(function () {
                         $(".datepicker").datepicker({ dateFormat: "mm/dd/yy" });
                     });
                 </script>
             }
         </div>
        </body>
    }
}
