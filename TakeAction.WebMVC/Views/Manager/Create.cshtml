@model TakeAction.Models.Manager.ManagerCreate

@{
    ViewBag.Title = "Create";
}

<h2 style="color:white;font-size: 70px"><center>New Manager</center></h2>
<script>
    $('#hiredDate').datepicker();
</script>



@using (Html.BeginForm())
{<body>
    @Html.AntiForgeryToken()
     <div class=" createemployee-board">
         <div class=" createemployee-container col-md-12" style="text-align:center; margin:10px">
             <div class="createemployee-card" ; color: black>
                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                 <div class="form-group">
                     <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                         First Name
                         @Html.EditorFor(model => model.ManagerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                         @Html.ValidationMessageFor(model => model.ManagerFirstName, "", new { @class = "text-danger" })
                     </div>


                 </div>
                 <div class="form-group">

                     <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                         Last Name
                         @Html.EditorFor(model => model.ManagerLastName, new { htmlAttributes = new { @class = "form-control" } })
                         @Html.ValidationMessageFor(model => model.ManagerLastName, "", new { @class = "text-danger" })
                     </div>
                 </div>
                 <div class="form-group">
                     <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                         Dept
                         @Html.EnumDropDownListFor(model => model.DeptM, new { htmlAttributes = new { @class = "form-control" } })
                         @Html.ValidationMessageFor(model => model.DeptM, "", new { @class = "text-danger" })
                     </div>
                 </div>
                 <div class="form-group">
                     <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                         Hired Date
                         @Html.EditorFor(model => model.HiredDate, new { htmlAttributes = new { @class = "datepicker", autocomplete = "off" } })
                         @Html.ValidationMessageFor(model => model.HiredDate, "", new { @class = "text-danger" })
                     </div>
                 </div>
                 <div class="form-group">
                     <div style="font-size: 30px; padding-top: 30px; width: 20%; margin:0px auto; display:block">
                         <input type="submit" value="Submit" class="btn btn-default" />
                     </div>
                 </div>

             </div>
         </div>
         <div>
             @Html.ActionLink("Back to List", "Index")
         </div>

         @section Scripts {
             @Scripts.Render("~/bundles/jqueryval")
             <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

             <script style="color: black">
                 $(function () {
                     $(".datepicker").datepicker({ dateFormat: "mm/dd/yy" });
                 });
             </script>
         }
     </div>
</body>
}
}
